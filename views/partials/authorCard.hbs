<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{this.firstName}} {{this.lastName}}</h5>
    {{#if this.biography}}
      <p class="card-text">{{this.biography}}</p>
    {{/if}}

    <a href="/authors/{{this.id}}" class="btn btn-primary">Ver mas detalles</a>
    <a href="/authors/{{this.id}}/edit" class="btn btn-secondary">Editar</a>

    <form action="/authors/{{this.id}}/delete" method="POST">
      <button type="submit" class="btn btn-danger">Borrar</button>
    </form>
  </div>
  <div class="card-footer">
    <small class="text-muted">{{this.birthDate}}</small>
  </div>
</div>