<h1>{{title}}</h1>

{{#each books as |book|}}
  <div>
    <h3>{{book.title}}</h3>
    <h4>{{book.author.firstName}} {{book.author.lastName}}</h4>
    <p>{{book.description}}</p>

    <img src="{{book.image}}" alt="{{book.title}}" width="300">

    <a href="/books/{{book._id}}">Ver mas detalles</a>
  </div>
{{/each}}
